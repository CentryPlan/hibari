%%% -*- mode: erlang -*-

%%
%% bin/hibari
%%
{runner_script_dir, "$(cd ${0%/*} && pwd)"}.
{runner_base_dir, "${RUNNER_SCRIPT_DIR%/*}"}.
{runner_etc_dir, "$RUNNER_BASE_DIR/etc"}.
{runner_log_dir, "$RUNNER_BASE_DIR/log"}.
{pipe_dir, "/tmp/$RUNNER_BASE_DIR/"}.
{runner_user, ""}.

%%
%% etc/app.config
%%
{sasl_error_log, "log/sasl-error.log"}.
{sasl_log_dir, "log/sasl"}.
{sasl_log_maxbytes, "10485760"}. % 10 MB max file size
{sasl_log_maxfiles, "5"}.        % 5 files max

{gdss_data_dir, "data/brick"}.

{gdss_admin_nodes, ""}.
{gdss_admin_other_nodes, ""}.

%%
%% etc/vm.args
%%
{node, "hibari@127.0.0.1"}.

