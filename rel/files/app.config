   {errlog_type, all},
   {error_logger_mf_dir, "{{sasl_log_dir}}"},
   {error_logger_mf_maxbytes, {{sasl_log_maxbytes}} }, %% NOTE: space between }} }
   {error_logger_mf_maxfiles, {{sasl_log_maxfiles}} }  %% NOTE: space between }} }
  ]},

 %%
