%%% -*- mode: erlang -*-

[
 %%
 %% Kernel config
 %%
 {kernel,
  [{distributed, [{gdss_admin, 2000, [{{gdss_admin_nodes}}]}]},
   {sync_nodes_mandatory, []},
   {sync_nodes_optional, [{{gdss_admin_other_nodes}}]},
   {sync_nodes_timeout, 123}
  ]
 },

 %%
 %% SASL config
 %%
 {sasl,
  [{sasl_error_logger, {file, "{{sasl_error_log}}"}},
