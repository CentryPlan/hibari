   {network_b_address, ""},
   {network_b_broadcast_address, ""},
   {network_monitor_enable, false},
   {network_monitor_monitored_nodes, []}
  ]},

 %%
 %% GDSS Brick config
 %%
 {gdss_brick,
  [{brick_default_data_dir, "{{gdss_data_dir}}"}
  ]},

 %%
 %% GDSS Admin config
 %%
 {gdss_admin,
  [{admin_server_distributed_nodes, [{{gdss_admin_nodes}}] },
   {application_data_dir, "."},
   {brick_admin_conf_path, "root/conf/admin.conf"},
   {brick_s3_conf_path, "root/conf/s3.conf"}
  ]}
].
